public class UpperTriangleStarPattern {
    public static void main(String[] args) {
        int rows = 5; // Number of rows in the triangle

        for (int i = 0; i < rows; i++) {
            for (int j = 0; j <= i; j++) {
                System.out.print("* ");
            }
            System.out.println();
        }
    }
}
